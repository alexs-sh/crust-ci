[Unit]
Description=Buildbot Worker (Rootfs ARMHF)
Wants=network.target
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/buildbot/armhf-rootfs
ExecStart=/root/buildbot/bin/buildbot-worker start --nodaemon
ExecReload=/bin/kill -HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
